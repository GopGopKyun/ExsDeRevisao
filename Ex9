#include <stdio.h>

int main()
{
    int i, n, notas;
    float media;
    i=0;
    printf("Insira o numero de alunos na sala: ");
    scanf("%d", &n);
    
    while(i<n){
        printf("Insira as notas: ");
        scanf("%d", &notas);
        media+=notas;
        i++;
    }
    media=media/n;
    printf("Media geral da turma: %.2f", media);

    return 0;
}

